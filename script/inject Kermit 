cd ..

# Build UI
cd ui/
npm install
npm run build
cd ..

# Start BLE Scanner
echo "ğŸ“¡ Launching BLE Scanner..."
nohup python3 ble_scanner_daemon.py &

echo "âœ… Kermit ğŸ”± AGI Ready."